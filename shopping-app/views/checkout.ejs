<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Checkout</title>
  <link rel="stylesheet" href="/css/checkout.css" />
</head>
<body>
  <main class="container">
    <header class="topbar">
      <a href="/cart" class="back">← Back to Cart</a>
      <h1>Checkout</h1>
      <div></div>
    </header>

    <section class="grid">
      <!-- LEFT: forms -->
      <form id="checkoutForm" class="card form">
        <h2>Shipping Address</h2>

        <div class="two">
          <label>
            First name
            <input name="firstName" required />
          </label>
          <label>
            Last name
            <input name="lastName" required />
          </label>
        </div>

        <label>
          Address line 1
          <input name="address1" required />
        </label>

        <label>
          Address line 2 (optional)
          <input name="address2" />
        </label>

        <div class="two">
          <label>
            City
            <input name="city" required />
          </label>
          <label>
            State
            <input name="state" required />
          </label>
        </div>

        <div class="two">
          <label>
            Postcode
            <input name="postcode" required />
          </label>
          <label>
            Country
            <input name="country" value="Australia" required />
          </label>
        </div>

        <h2>Payment</h2>

        <div class="pay-methods">
          <label class="radio">
            <input type="radio" name="payMethod" value="card" checked />
            Credit / Debit Card
          </label>
          <label class="radio">
            <input type="radio" name="payMethod" value="applepay" />
            Apple Pay (Mock)
          </label>
          <label class="radio">
            <input type="radio" name="payMethod" value="afterpay" />
            Afterpay (Mock)
          </label>
        </div>

        <!-- Card fields (only required when payMethod=card) -->
        <div id="cardFields" class="card-fields">
          <label>
            Card number
            <input name="cardNumber" inputmode="numeric" placeholder="4242 4242 4242 4242" />
          </label>

          <div class="two">
            <label>
              Expiry (MM/YY)
              <input name="expiry" placeholder="12/34" />
            </label>
            <label>
              CVC
              <input name="cvc" inputmode="numeric" placeholder="123" />
            </label>
          </div>

          <label>
            Name on card
            <input name="cardName" />
          </label>
        </div>

        <button id="placeOrderBtn" class="primary" type="submit">
          Place Order (Mock)
        </button>

        <p id="msg" class="msg"></p>
      </form>

      <!-- RIGHT: summary -->
      <aside class="card summary">
        <div class="summary-head">
          <h2>Order Summary</h2>
          <span id="orderNo" class="order-no"># —</span>
        </div>

        <div id="summaryItems" class="summary-items"></div>

        <div class="divider"></div>

        <div class="row">
          <span class="muted">Subtotal</span>
          <span id="subtotal">$0.00</span>
        </div>
        <div class="row">
          <span class="muted">Shipping</span>
          <span class="free">Free</span>
        </div>
        <div class="divider"></div>
        <div class="row total">
          <span>Total</span>
          <span id="total" class="total-price">$0.00</span>
        </div>
      </aside>
    </section>
  </main>

  <script src="/js/checkout.js"></script>
</body>
</html>
